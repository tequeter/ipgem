#!/bin/bash

set -e -u

cd /etc/ipgem-rp
for script in run/[0-9][0-9]-*; do
    if [ -x "$script" ]; then
        echo "# Executing $script"
        "$script"
    elif echo "$script" |grep -q '\.sql$'; then
        echo "# Interpreting SQL script $script"
        sqlite3 /var/cache/ipgem/tmp.db <"$script"
    else
        echo "# Don't know what to do with $script" >&2
        exit 1
    fi
done

exit 0
